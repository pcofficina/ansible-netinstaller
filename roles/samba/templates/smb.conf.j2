[global]
        bind interfaces only = yes
        interfaces = {{ network_lan_ip }}

        workgroup = PCO
        security = user
        passdb backend = tdbsam

        map to guest = Bad User
        log file = /var/log/samba/%m
        log level = 1

        server role = standalone server
        acl allow execute always = True

[win11]
        path = {{ basepath_dir }}/win11/
        browseable = yes
        read only = yes
        guest only = yes
        guest ok = yes
